#!/bin/bash
set -euo pipefail

instance_id="$@"
if [[ ! $@ =~ ^i\-[0-9a-z]+ ]]; then
    instance_id=$(aws ec2 describe-instances --filters Name=private-dns-name,Values=$@ --query Reservations[*].Instances[*].[InstanceId] --output text)
fi

aws ec2 modify-instance-attribute --disable-api-termination --instance-id "${instance_id}"

echo "âœ… Protected $instance_id from termination"
